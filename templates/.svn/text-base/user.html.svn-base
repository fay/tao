{% extends "base.html" %}
{% load viewtool %}
{% block css %}
<script type="text/javascript">
function dd(c){
alert(c);
}
function watched(current){  
$.ajax({ url: "/watch/{{who.username}}/", success: function(){
        current.innerHTML = "<strong class=\"unwatch\">♥</strong>我正在关注Ta";
      }});
}
function unwatched(current){ 
$.ajax({ url: "/unwatch/{{who.username}}/", success: function(){
        current.innerHTML = "<strong class=\"watch\">♥</strong>关注Ta";
      }});
}
</script>
{% endblock %}
{% block content %}

<div class="home">
	<div class="nav">
		<div class="left">
			<a href="/user/{{who.username}}/all/">全部</a> 
			<a href="/user/{{who.username}}/blog/">博客</a>
			<a href="/user/{{who.username}}/google_reader/">Google阅读器</a>
			<a href="/user/{{who.username}}/douban/">豆瓣</a>
		</div>
		<div class="right">
			{%if existing_watch%}
 				<a href="#" onclick="unwatched(this);"><strong class="unwatch">♥</strong>我正在关注Ta, 取消关注?</a>
 			{%else%}
				<a href="#" onclick="watched(this);"><strong class="watch">♥</strong>关注Ta</a>
			{%endif%}
			<a href="http://www.google.com/profiles/{{who.username}}" target="blank">查看Ta的Google档案</a>
		</div>
		<div class="none"></div>
	</div>
	<div class="main">
	<h4>{{who.username}}的广播</h4>
	{%for activity in activities%}
	{%include 'entry.html'%}
	{%endfor%}
	</div>
	<div class="sidebar">
		<h4>{{who.username}}的心跳</h4>
		{{stat_img|safe}}
		<h4>{{who.username}}的美味书签</h4>
			{%if delicious_stream.account%}
			<script type="text/javascript" src="http://feeds.delicious.com/v2/js/networkbadge/{{delicious_stream.account}}?showadd&icon=m&name&itemcount&nwcount&fancount"></script>
			<br><a href="/labs/tag/{{who.username}}/">{{who.username}}的Delicious标签云</a>
			{%endif%}
		<h4>{{who.username}}的豆瓣秀</h4>
		{%if douban_stream.account%}
			<script type="text/javascript" src="http://www.douban.com/service/badge/{{douban_stream.account}}/?show=collection&amp;n=8&amp;columns=2" ></script>
		{%endif%}
	</div>
	<div class="none"></div>
	<div class="paginator">
	{% autoescape off %}
		{{paginator}}
	{% endautoescape %}
</div>
</div>
{% endblock %}